
.login .head{
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1vh;
}

.login .head .logo{
  width: 8vh;
  height: 8vh;
}

.login .head .flag{
  font-size: 4vw;
  color: gray;
}
.form{
  margin: 4vh auto;
  width: 80vw;
}
.form .title{
  font-size: 6vw;
  font-weight: bolder;
}
.info input{
  box-sizing: border-box;
  margin-top: 2.5vh;
  padding-left: 3vw;
  font-size: 3.5vw;
  height: 7vh;
  background-color: rgb(237,237,237);
  border-radius: 3vw;
}

.button{
  width: 50vw;
  margin: 0 auto;
  font-weight: bold;
}

.button view{
  border-radius: 1vw;
  height: 6vh;
  line-height: 6vh;
  text-align: center;
  margin-top: 2.5vh;
}
.button .login{
  color: white;
  background-color: rgb(7,193,96);
}
.button .register{
  color: rgb(7,193,96);
  background-color: rgb(242,242,242);
}
