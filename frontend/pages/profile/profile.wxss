
.login .head{
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1vh;
}

.login .head .logo{
  width: 8vh;
  height: 8vh;
}

.login .head .flag{
  font-size: 4vw;
  color: gray;
}
.form{
  margin: 4vh auto;
  width: 80vw;
}
.form .title{
  font-size: 6vw;
  font-weight: bolder;
}
.info input{
  box-sizing: border-box;
  margin-top: 2.5vh;
  padding-left: 3vw;
  font-size: 3.5vw;
  height: 7vh;
  background-color: rgb(237,237,237);
  border-radius: 3vw;
}

.button{
  width: 50vw;
  margin: 0 auto;
  font-weight: bold;
}

.button view{
  border-radius: 1vw;
  height: 6vh;
  line-height: 6vh;
  text-align: center;
  margin-top: 2.5vh;
}
.button .login{
  color: white;
  background-color: rgb(7,193,96);
}
.button .register{
  color: rgb(7,193,96);
  background-color: rgb(242,242,242);
}
.profile{
  min-height: 100vh;
  background-color: rgb(238,238,238);
}
.profile .head{
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 2vh;
  gap: 2vh;
  height: 25vh;
  background-color: white;
}
.profile .head .img{
  border-radius: 50%;
  width: 18vw;
  height: 18vw;
}
.profile .menu{
  display: flex;
  flex-direction: column;
  background-color: white;
}
.profile .menu > view{
  box-sizing: border-box;
  padding: 2vw 0 2vw 4vw;
  border-top: 1px solid rgb(238, 238, 238);
  display: flex;
  flex-direction: row;
}
.profile .menu .left{
  font-size: 4vw;
  flex: 12
}
.profile .menu .right{
  text-align: center;
  color: rgb(185, 185, 185);
  font-weight: bolder;
  flex: 1
}