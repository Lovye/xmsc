.goods{
  min-height: 100vh;
   background-color:  rgb(238,238,238);
}
.goods .item{
  width: 100%;
  height: 16vh;
  margin-bottom: 2vh;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.left{
  margin-left: 8vw;
  display: flex;
}
.left .img{
  width: 18vw;
  height: 18vw;
}
.right{
  margin-right: 4vw;
}

.content .name{
  font-size: 4vw;
}
.content .price{
  font-size: 3vw;
  color: gray;
}
.content .quantity{
  display: inline;
  border-radius: 1vw;
  padding: 1vw;
  font-size: 4vw;
  font-weight: bold;
  background-color: rgb(238,238,238);
  
}
.pay{
  width: 100vw;
  height: 8vh;
  position: fixed;
  bottom: 100rpx;
  background-color: white;
  display: flex;
}
.pay .sum{
  flex:2;
  color: gray;
  font-size: 4vw;
  line-height: 8vh;
  text-align: center;
}
.pay .sum span{
  font-size: 5vw;
  color: rgb(255,126,37);
}
.pay .btn{
  color: white;
  line-height: 8vh;
  text-align: center;
  background-color: rgb(255,103,0);
  flex:1;
}
.delete{
  width: 8vw;
  height: 8vw;
}
